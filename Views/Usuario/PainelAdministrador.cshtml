@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Painel do Administrador";
}

<div class="main-content p-4">
    <h2 class="fw-bold text-primary mb-4">Bem-vindo ao Painel do Administrador</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-text text-primary" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Contratos</h5>
                    <a asp-controller="Contrato" asp-action="Index" class="btn btn-outline-primary mt-2">Gerenciar</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body text-center">
                    <i class="bi bi-people text-success" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Moradores</h5>
                    <a asp-controller="Pessoa" asp-action="Index" class="btn btn-outline-success mt-2">Visualizar</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar text-warning" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Financeiro</h5>
                    <a asp-controller="Financeiro" asp-action="Index" class="btn btn-outline-warning mt-2">Abrir</a>
                </div>
            </div>
        </div>
    </div>
</div>